{
	"name": "framework/validation",
	"type": "library",
	"description": "The Framework Validation Library",
	"keywords": [
		"validation"
	],
	"homepage": "https://the-framework.gitlab.io/libraries/validation.html",
	"license": "MIT",
	"authors": [
		{
			"name": "Natan Felles",
			"email": "natanfelles@gmail.com"
		}
	],
	"require": {
		"php": ">=7.3",
		"framework/language": "dev-master",
		"natanfelles/array-simple": "^0.1"
	},
	"require-dev": {
		"ext-xdebug": "*",
		"framework/coding-standard": "dev-master",
		"localheinz/composer-normalize": "^1.2",
		"phpmd/phpmd": "^2.6",
		"phpstan/phpstan": "^0.11",
		"phpunit/phpunit": "^8.2"
	},
	"autoload": {
		"psr-4": {
			"Framework\\Validation\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Tests\\Validation\\": "tests/"
		}
	},
	"repositories": [
		{
			"type": "composer",
			"url": "https://the-framework.gitlab.io/satis/"
		}
	],
	"minimum-stability": "dev",
	"prefer-stable": true,
	"scripts": {
		"post-install-cmd": [
			".hooks/init"
		],
		"post-update-cmd": [
			"composer dump-autoload"
		]
	},
	"support": {
		"email": "natanfelles@gmail.com",
		"issues": "https://gitlab.com/the-framework/libraries/validation/issues",
		"wiki": "https://gitlab.com/the-framework/libraries/validation/wikis/home",
		"source": "https://gitlab.com/the-framework/libraries/validation",
		"docs": "https://the-framework.gitlab.io/libraries/validation/docs/"
	}
}
