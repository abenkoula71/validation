{
    "name": "aplus/validation",
    "type": "library",
    "description": "Aplus Framework Validation Library",
    "keywords": [
        "validation",
        "validator",
        "files-validation"
    ],
    "homepage": "https://docs.aplus-framework.com/guides/libraries/validation/",
    "license": "MIT",
    "authors": [
        {
            "name": "Natan Felles",
            "email": "natanfelles@gmail.com",
            "homepage": "https://natanfelles.github.io"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-fileinfo": "*",
        "ext-intl": "*",
        "ext-json": "*",
        "aplus/helpers": "^2.2",
        "aplus/language": "^1.6"
    },
    "require-dev": {
        "ext-xdebug": "*",
        "aplus/coding-standard": "^1.9",
        "ergebnis/composer-normalize": "^2.15",
        "jetbrains/phpstorm-attributes": "^1.0",
        "phpmd/phpmd": "^2.10",
        "phpstan/phpstan": "^0.12",
        "phpunit/phpunit": "^9.5"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Framework\\Validation\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Validation\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "support": {
        "email": "support@aplus-framework.com",
        "issues": "https://gitlab.com/aplus-framework/libraries/validation/issues",
        "wiki": "https://gitlab.com/aplus-framework/libraries/validation/wikis/home",
        "source": "https://gitlab.com/aplus-framework/libraries/validation",
        "docs": "https://docs.aplus-framework.com/guides/libraries/validation/"
    },
    "funding": [
        {
            "type": "other",
            "url": "https://aplus-framework.com/sponsor"
        }
    ]
}
