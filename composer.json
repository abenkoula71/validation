{
	"name": "natanfelles/validation",
	"type": "library",
	"description": "The Framework Validation Library",
	"keywords": [
		"validation"
	],
	"homepage": "https://the-framework.gitlab.io/libraries/validation.html",
	"license": "MIT",
	"authors": [
		{
			"name": "Natan Felles",
			"email": "natanfelles@gmail.com"
		}
	],
	"require": {
		"php": ">=8.0",
		"ext-intl": "*",
		"ext-json": "*",
		"natanfelles/array-simple": "^1.0",
		"natanfelles/language": "^1.2"
	},
	"require-dev": {
		"ext-xdebug": "*",
		"ergebnis/composer-normalize": "^2.13",
		"natanfelles/coding-standard": "^1.2",
		"phpmd/phpmd": "^2.10",
		"phpstan/phpstan": "^0.12",
		"phpunit/phpunit": "^9.5"
	},
	"config": {
		"optimize-autoloader": true,
		"preferred-install": "dist",
		"sort-packages": true
	},
	"autoload": {
		"psr-4": {
			"Framework\\Validation\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Tests\\Validation\\": "tests/"
		}
	},
	"minimum-stability": "dev",
	"prefer-stable": true,
	"support": {
		"email": "natanfelles@gmail.com",
		"issues": "https://gitlab.com/the-framework/libraries/validation/issues",
		"wiki": "https://gitlab.com/the-framework/libraries/validation/wikis/home",
		"source": "https://gitlab.com/the-framework/libraries/validation",
		"docs": "https://the-framework.gitlab.io/libraries/validation/docs/"
	}
}
